{
  "name": "rock-paper-scissors-server",
  "version": "0.0.1",
  "description": "The server side of rock-paper-scissors",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy": "copyfiles -f ./src/index.html ./dist",
    "build-client": "npm run clean & npm run copy & webpack --progress --mode development",
    "build-server": "babel server -s -D -d server-dist",
    "build-seeder": "babel utils server/models -s -D -d seeder-dist",
    "build": "npm run build-client & npm run build-server & npm run build-seeder",
    "seeder": "npm run build-seeder; node seeder-dist/seeder.js",
    "serve": "node server-dist"
  },
  "author": "Luca Di Gaspero",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "copyfiles": "^2.0.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-history-api-fallback": "^2.2.1",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.2.1",
    "md5": "^2.2.1",
    "mongoose": "^5.1.2",
    "page": "^1.8.6",
    "semantic-ui-css": "^2.3.1"
  }
}
